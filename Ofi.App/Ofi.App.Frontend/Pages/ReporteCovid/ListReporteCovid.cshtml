@page
@model Ofi.App.Frontend.Pages.ListReporteCovidModel
@{
}
<h1> Reporte covid </h1>
<table class="table">
    @foreach (var item in Model.reporteCovid)
    {
        <tr>
            <td> @item.id</td>
            <td> @item.persona</td>
            <td> 
                <a class="btn btn-primary" asp-area="" asp-page="/ReporteCovid/DetallesReporteCovid" asp-route-ReporteCovidid="@item.id"><i class="fas fa-align-justify"></i></a>
            
                <a class="btn btn-primary" asp-area="" asp-page="/ReporteCovid/EditarReporteCovid"><i class="fas fa-edit"></i></a>
             
                <a class="btn btn-primary" asp-area="" asp-page="/ReporteCovid/EliminarReporteCovid"><i class="fas fa-trash-alt"></i></a>
            </td>

        </tr>
    }
   
</table>

<a class="btn btn-primary" asp-area="" asp-page="/ReporteCovid/CrearReporteCovid"aria-hidden="true">Crear nuevo reporte<i class="fas fa-plus-circle"></i></a>

