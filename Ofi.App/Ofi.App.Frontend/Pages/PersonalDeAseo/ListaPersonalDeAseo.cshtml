@page
@model miWeb.App.Frontend.Pages.ListaPersonalDeAseoModel
@{
}
<h1> Lista Personal De Aseo</h1>
<table class="table">
    @foreach (var item in Model.personalDeAseos)
    {
        <tr>
            <td> @item.id</td>
            <td> @item.nombre</td>
            <td> @item.apellido</td>
            <td> @item.edad</td>
            <td> @item.estadoCovid</td>
            <td> @item.turno</td>
            <td> 
                <a class="btn btn-primary" asp-area="" asp-page="/PersonalDeAseo/DetallesPersonalDeAseo" asp-route-personalDeAseoId="@item.id"><i class="fas fa-align-justify"></i></a>
            
                <a class="btn btn-primary" asp-area="" asp-page="/PersonalDeAseo/EditarPersonalDeAseo" asp-route-personalDeAseoId="@item.id"><i class="fas fa-edit"></i></a>
            
                <a class="btn btn-primary" asp-area="" asp-page="/PersonalDeAseo/EliminarPersonalDeAseo" asp-route-personalDeAseoId="@item.id"><i class="fas fa-trash-alt"></i></a>
            </td>

        </tr>
    }
   
</table>
<a class="btn btn-primary" asp-area="" asp-page="/PersonalDeAseo/CrearPersonalDeAseo"aria-hidden="true">Crear nuevo Personal De Aseo <i class="fas fa-plus-circle"></i></a>